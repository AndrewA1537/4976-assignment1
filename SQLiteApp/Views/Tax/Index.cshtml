@model NonProfitLibrary.Donations

@{
    ViewData["Title"] = "Index";
}

<h4>Select Donor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Display">
            <div class="form-group">
                <label asp-for="AccountNo" class="control-label"></label>
                <select asp-for="AccountNo" class ="form-control" asp-items="ViewBag.AccountNo"></select>
            </div>
 

            <div class="form-group">
                <input type="submit" value="Display" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

